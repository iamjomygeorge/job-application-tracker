{
  "name": "job-application-tracker",
  "version": "1.0.0",
  "private": true,
  "author": "Jomy George",
  "description": "",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --names \"server,client\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "start": "concurrently --kill-others-on-fail --names \"server,client\" \"npm run start:server\" \"npm run start:client\"",
    "start:client": "npm run start --workspace=client",
    "start:server": "npm run start --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
